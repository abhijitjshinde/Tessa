<Signup_Screen>:
    name: "signup"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color: rgba(26,24,58,255)
            on_release:
                app.screen_manager.change_screen("land")
        MDLabel:
            id: mheading
            text: "H i !"
            font_name: "assets/fonts/Poppins-Bold.ttf"
            font_size: "26sp"
            pos_hint:{"center_x":0.5,"center_y":.85}
            halign:"center"
            color: rgba(0,0,59,255)
        MDLabel:
            id: groupcode
            text: " "
            font_name: "assets/fonts/Poppins-Bold.ttf"
            font_size: "20sp"
            pos_hint:{"center_x":0.5,"center_y":.79}
            halign:"center"
            color: rgba(0,0,59,255)
        MDLabel:
            id: hline
            text: "Create a New Account"
            # markup:True
            font_name: 'assets/fonts/Roboto-Regular.ttf'
            font_size: "17sp"
            halign:"center"
            pos_hint:{"center_y":.72}
            color: rgba(248, 178, 45,255) 
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x":0.5,"center_y":.63}
            MDTextField:
                id: Name
                hint_text: "Name"
                # max_text_length: 10
                # input_filter: "int"
                pos_hint:{"center_x":.43,"center_y":0.5}
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x":0.5,"center_y":.53}
            MDTextField:
                id: Phone
                hint_text: "Phone Number"
                max_text_length: 10
                input_filter: "int"
                pos_hint:{"center_x":.43,"center_y":0.5}
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x":0.5,"center_y":.43}
            MDTextField:
                id: Password
                hint_text: "Password"
                # max_text_length: 10
                # input_filter: "int"
                password:True
                pos_hint:{"center_x":.43,"center_y":0.5}
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: Password.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                pos_hint:{"center_x":.98,"center_y":0.5}
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    Password.password = False if Password.password is True else True
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x":0.5,"center_y":.33}            
            MDTextField:
                id: Confirm_pass
                hint_text: "Confirm Password"
                # max_text_length: 10
                # input_filter: "int"
                password:True
                pos_hint:{"center_x":.43,"center_y":0.5}
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: Confirm_pass.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                pos_hint:{"center_x":.98,"center_y":0.5}
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    Confirm_pass.password = False if Confirm_pass.password is True else True
        Button:
            text: "SIGN UP"
            pos_hint:{"center_x":.5,"center_y":.20}
            size_hint:.66,.065
            background_color:0,0,0,0
            font_name: "assets/fonts/Poppins-Bold.ttf"
            on_release:
                root.Sign_me_up(Name.text,Phone.text,Password.text,Confirm_pass.text,"Admin",groupcode.text) if hline.text == "President Registration" else root.Sign_me_up(Name.text,Phone.text,Password.text,Confirm_pass.text)
            canvas.before:
                Color:
                    rgb: rgba(242, 129, 42)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
        MDSeparator:
            color: rgba(135,133,193,255)

        MDTextButton:
            text:"Login"
            pos_hint:{"center_x":0.5,"center_y":.12}
            color: rgba(68,78,132,255)
            font_size:"14sp"
            on_release:
                app.screen_manager.change_screen("login")




