            #     background_color:1,1,1,0
            #     foreground_color: rgba(0,0,59,255)
            #     cursor_color:rgba(0,0,59,255)
            #     font_size:"14sp"
            #     cursor_width:"2sp"
            #     multiline:False
            # MDFloatLayout:
            #     pos_hint:{"center_x":.5,"center_y":0}
            #     size_hint_y:.03
            #     md_bg_color:rgba(175,175,175,255)
        Button:
            text: "SUBMIT"
            pos_hint:{"center_x":.5,"center_y":.13}
            size_hint:.66,.065
            background_color:0,0,0,0
            font_name: "assets/fonts/Poppins-Bold.ttf"
            on_release:
                root.group_register(gname.text)
                # app.screen_manager.change_screen("verification")
            canvas.before:
