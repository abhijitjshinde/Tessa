<Forgot_Screen>:
    name: "forgot"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color: rgba(26,24,58,255)
            on_release:
                app.screen_manager.change_screen("land")
        Image:
            source: "assets/img/forgot.png"
            size_hint: .9,.9
            pos_hint: {"center_x":.5,"center_y":.70}
        MDLabel:
            text: "Hi Floks"
            font_name: "assets/fonts/Poppins-Bold.ttf"
            font_size: "23sp"
            pos_hint:{"center_y":.51}
            halign:"center"
            color: rgba(85/255,163/255,181/255,255)
        MDLabel:
            text: "Don't Remember your Password,just add your phone number admin will reach to you."
            # markup:True
            font_name: 'assets/fonts/Roboto-Regular.ttf'
            font_size: "13sp"
            size_hint_x:.85
            pos_hint:{"center_y":.45,"center_x":.5}
            halign:"center"
            color: rgba(127,127,127,255)
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x":0.5,"center_y":.31}
            MDTextField:
                id: Phone
                hint_text: "Phone Number"
                max_text_length: 10
                input_filter: "int"
                pos_hint:{"center_x":.43,"center_y":0.5}
        Button:
            text: "SUBMIT"
            pos_hint:{"center_x":.5,"center_y":.13}
            size_hint:.66,.065
            background_color:0,0,0,0
            font_name: "assets/fonts/Poppins-Bold.ttf"
            on_release:
                root.send_forgot_password_req(Phone.text)
                # app.screen_manager.change_screen("verification")
            canvas.before:
                Color:
                    rgb: rgba(242, 129, 42)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
    
        
        
        